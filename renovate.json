{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    "schedule:weekly"
  ],
  "timezone": "Asia/Shanghai",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "groupName": "Astro ecosystem",
      "matchPackagePrefixes": ["astro", "@astrojs/"]
    },
    {
      "groupName": "Tailwind CSS",
      "matchPackageNames": ["tailwindcss", "@tailwindcss/**"]
    },
    {
      "groupName": "TypeScript types",
      "matchPackagePrefixes": ["@types/"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "reviewers": ["team:frontend"]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "automerge": true
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 3
}
